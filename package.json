{
  "name": "kubernetes-yaml-formatter",
  "displayName": "Kubernetes YAML Formatter",
  "icon": "images/icon.png",
  "description": "A better YAML formatter for DevOps like Kubernetes, Ansible, CI/CD, etc.",
  "version": "1.2.0",
  "publisher": "kennylong",
  "repository": {
    "url": "https://github.com/longkai/kubernetes-yaml-formatter.git",
    "type": "git"
  },
  "license": "SEE LICENSE IN LICENSE.txt",
  "homepage": "https://kennylong.io",
  "author": {
    "email": "im.longkai@gmail.com",
    "name": "Kennylong",
    "url": "https://kennylong.io"
  },
  "keywords": [
    "Kubernetes",
    "YAML",
    "Formatter",
    "Customization",
    "DevOps",
    "Github Actions",
    "Helm",
    "Ansible",
    "Kustomize",
    "CI",
    "CD",
    "Workflow"
  ],
  "bugs": {
    "url": "https://github.com/longkai/kubernetes-yaml-formatter/issues"
  },
  "categories": [
    "Formatters"
  ],
  "engines": {
    "vscode": "^1.61.0"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "Kubernetes Style YAML Formatter",
      "properties": {
        "kubernetes-yaml-formatter.compactSequenceIndent": {
          "type": "boolean",
          "default": true,
          "description": "Use compact sequence indent, i.e. no indent"
        },
        "kubernetes-yaml-formatter.includeDocumentStart": {
          "type": "boolean",
          "default": false,
          "description": "Include --- at document start"
        },
        "kubernetes-yaml-formatter.padLineComments": {
          "type": "integer",
          "default": 1,
          "description": "Pad line comments by a constant number of spaces"
        }
      }
    },
    "configurationDefaults": {
      "[yaml]": {
        "editor.defaultFormatter": "kennylong.kubernetes-yaml-formatter",
        "editor.formatOnSave": true
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.61.0",
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "eslint": "^8.20.0",
    "glob": "^8.0.3",
    "mocha": "^10.0.0",
    "typescript": "^4.7.4",
    "@vscode/test-electron": "^2.1.5"
  }
}
