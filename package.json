{
  "name": "kubernetes-yaml-formatter",
  "displayName": "Better YAML",
  "icon": "images/icon.png",
  "description": "A better YAML formatter",
  "version": "2.0.0",
  "publisher": "kennylong",
  "repository": {
    "url": "https://github.com/longkai/kubernetes-yaml-formatter.git",
    "type": "git"
  },
  "license": "SEE LICENSE IN LICENSE.txt",
  "homepage": "https://kennylong.io",
  "author": {
    "email": "im.longkai@gmail.com",
    "name": "Kennylong",
    "url": "https://kennylong.io"
  },
  "keywords": [
    "Kubernetes",
    "YAML",
    "Formatter",
    "Customization",
    "DevOps",
    "Github Actions",
    "Helm",
    "Ansible",
    "Kustomize",
    "CI",
    "CD",
    "Workflow"
  ],
  "bugs": {
    "url": "https://github.com/longkai/kubernetes-yaml-formatter/issues"
  },
  "categories": [
    "Formatters"
  ],
  "engines": {
    "vscode": "^1.61.0"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "Kubernetes Style YAML Formatter",
      "properties": {
        "kubernetes-yaml-formatter.indentSeq": {
          "type": "boolean",
          "default": false,
          "description": "Whether block sequences should be indented."
        },
        "kubernetes-yaml-formatter.directives": {
          "type": ["boolean", "null"],
          "default": null,
          "description": "Include directives in the output. If true, at least the document-start marker --- is always included. If false, no directives or marker is ever included. If null, directives and marker may be included if required."
        }
      }
    },
    "configurationDefaults": {
      "[yaml]": {
        "editor.defaultFormatter": "kennylong.kubernetes-yaml-formatter",
        "editor.formatOnSave": true
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.7",
    "@types/node": "20.x",
    "@types/vscode": "^1.61.0",
    "@typescript-eslint/eslint-plugin": "^7.14.1",
    "@typescript-eslint/parser": "^7.11.0",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0",
    "eslint": "^8.57.0",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "yaml": "^2.6.0"
  }
}
